= render :partial => @post

%p
  - if current_user == @post.user || current_user.admin?
    = link_to 'Edit', edit_post_path(@post)
    |
  - if current_user.admin?
    = button_to 'Destroy', @post, :method => :delete, :confirm => "Are you sure?"
    |
  = link_to "See All Posts by #{@post.user}", about_path(@post.user)

